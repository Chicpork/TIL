{
    "version": 1,
    "formatters": {
        "basic": {
            "format": "[%(asctime)s] (%(filename)s:%(lineno)d) >>> %(name)s:%(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "basic",
            "stream": "ext://sys.stdout"
        },
        "file_handler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "./apt/log/info.log"
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console", "file_handler"]
    },

    "loggers": {
        "__main__": {
            "handlers": ["console", "file_handler"],
            "level": "INFO",
            "propagate": false
        },
        "ray.services": {
            "handlers": ["console", "file_handler"],
            "level": "INFO",
            "propagate": false
        }
    }
}